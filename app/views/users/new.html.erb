<div>
    <h1>Sign up</h1>
</div>
<div>
    <% if @user.errors.any? %>
    <div id="error_explanation">
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
    <div>
    <%= form_with(model: @user,local: true) do |f| %>

    
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name %>
        
        <%= f.label :email, 'Email' %>
        <%= f.text_field :email %>
        
        <%= f.label :password, 'Password' %>
        <%= f.text_field :password %>
        
        <%= f.submit 'Sign up' %>
    
    <% end %>
    </div>

</div>
